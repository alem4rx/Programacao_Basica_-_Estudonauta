//Exercicio 8
//  Faça um algoritmo que de um desconto de 5% no valor de um produto e mostre o valor com desconto e quando será economizado

programa
{
    
  funcao inicio()
  {
    real p
    escreva("\nDigite o valor do produto R$:")
    leia(p)
    escreva("\n")
    escreva("\nVoce recebeu 5% de desconto o produto sairá por R$", p *0.95)
    escreva("\nVoce economizou R$", p*0.05)

    escreva("\n\n")
  }
}